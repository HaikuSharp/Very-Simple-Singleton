<Project>

	<PropertyGroup>
		<TargetFrameworks>net481;netstandard2.1;net8.0;net9.0;net10.0</TargetFrameworks>
		<LangVersion>preview</LangVersion>
		<BaseOutputPath>$(SolutionDir)bin\</BaseOutputPath>
	</PropertyGroup>

	<PropertyGroup>
		<BuildVersion>1.0.0</BuildVersion>
		<Version>$(BuildVersion)</Version>
		<AssemblyVersion>$(BuildVersion)</AssemblyVersion>
		<FileVersion>$(BuildVersion)</FileVersion>
	</PropertyGroup>

	<PropertyGroup>
		<PackageId>$(MSBuildProjectName)</PackageId>
		<Title>$(MSBuildProjectName)</Title>
		<Description>A tiny, dependency-free helper for registering and managing simple singletons in .NET.</Description>
		<Authors>R2R2HS</Authors>
		<Company>HaikuSharp</Company>
		<Copyright>Â© 2025 $(Company)</Copyright>
		<RepositoryType>git</RepositoryType>
		<PackageProjectUrl>https://github.com/HaikuSharp/Very-Simple-Singleton</PackageProjectUrl>
		<RepositoryUrl>$(PackageProjectUrl).git</RepositoryUrl>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
	</PropertyGroup>

	<PropertyGroup Condition="$(Configuration.StartsWith('Debug'))">
		<Optimize>false</Optimize>
		<DebugType>full</DebugType>
		<DebugSymbols>true</DebugSymbols>
		<DefineConstants>DEBUG</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="$(Configuration.StartsWith('Release'))">
		<ProduceReferenceAssembly>True</ProduceReferenceAssembly>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<ProduceReferenceAssemblyInOutDir>True</ProduceReferenceAssemblyInOutDir>
		<WarningLevel>9999</WarningLevel>
		<TreatWarningsAsErrors>True</TreatWarningsAsErrors>
		<DefineConstants>RELEASE</DefineConstants>
	</PropertyGroup>

</Project>
